<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<plug-in>
    <!-- Plugin Informations -->
    <name>directory-angular</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <description>module.directory.angular.module.description</description>
    <provider>module.directory.angular.module.provider</provider>
    <documentation/>
    <installation/>
    <changes/>
    <user-guide/>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/directory/directory.png</icon-url>
    <copyright>Copyright 2001-2013 Mairie de Paris</copyright>
    <core-version-dependency>
        <min-core-version>3.1.2</min-core-version>
        <max-core-version/>
    </core-version-dependency>
    <db-pool-required>0</db-pool-required>

    <!-- Specific plugin JAVASCRIPT -->
    <javascript-files>
        <javascript-files-scope>xpage</javascript-files-scope>
        <javascript-file>directory/modules/angular/vendor/vendor.js</javascript-file>
        <javascript-file>directory/modules/angular/directory-angular.js</javascript-file>
    </javascript-files>

    <!-- Xpage configuration -->
    <applications>
        <application>
            <application-id>directory-angular</application-id>
            <application-class>fr.paris.lutece.plugins.directory.modules.angular.web.DirectoryAngularApp</application-class>
        </application>
    </applications>

</plug-in>
